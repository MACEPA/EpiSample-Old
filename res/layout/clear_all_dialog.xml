<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_background_state"
            android:gravity="center"
            android:padding="10dp" >

            <TextView
                android:id="@+id/messageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/census_exist"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/dark_blue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_background_state"
            android:gravity="center"
            android:padding="10dp" >

            <RelativeLayout
                android:id="@+id/clearAllButtonContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/curve_border_blue_button"
                android:clickable="true"
                android:onClick="clearAllClickListener" >

                <ImageButton
                    android:id="@+id/clearAllImageButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="-2dp"
                    android:background="@drawable/left_border_blue_part_of_button"
                    android:contentDescription="@string/clear_all"
                    android:onClick="clearAllClickListener"
                    android:src="@drawable/ic_purge" />

                <TextView
                    android:id="@+id/clearAllTextView"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/clearAllImageButton"
                    android:gravity="center"
                    android:text="@string/clear_all"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_background_state"
            android:gravity="center"
            android:padding="10dp" >

            <RelativeLayout
                android:id="@+id/changePasswordButtonContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/curve_border_blue_button"
                android:clickable="true"
                android:onClick="changePasswordClickListener" >

                <ImageButton
                    android:id="@+id/changePasswordImageButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="-2dp"
                    android:background="@drawable/left_border_blue_part_of_button"
                    android:contentDescription="@string/purge"
                    android:onClick="changePasswordClickListener"
                    android:src="@drawable/ic_change_password" />

                <TextView
                    android:id="@+id/changePasswordTextView"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/changePasswordImageButton"
                    android:gravity="center"
                    android:text="@string/change_password"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_background_state"
            android:gravity="center"
            android:padding="10dp" >

            <RelativeLayout
                android:id="@+id/exitButtonContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/curve_border_blue_button"
                android:clickable="true"
                android:onClick="exitClickListener" >

                <ImageButton
                    android:id="@+id/exitImageButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="-2dp"
                    android:background="@drawable/left_border_blue_part_of_button"
                    android:contentDescription="@string/exit"
                    android:onClick="exitClickListener"
                    android:src="@drawable/ic_exit" />

                <TextView
                    android:id="@+id/exitTextView"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/exitImageButton"
                    android:gravity="center"
                    android:text="@string/exit"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>