<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/logo_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/episample" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/status_padding"
            android:paddingRight="@dimen/status_padding" >            
            <TextView
		        android:id="@+id/status_text"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/title_bar_blue"
		        android:textColor="@color/white_color"
		        android:paddingBottom="4dip"
		        android:paddingLeft="8dip"
		        android:paddingRight="8dip"
		        android:paddingTop="4dip"
		        android:text="@string/select_module"
		        android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/light_blue"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <RelativeLayout
                android:id="@+id/collectContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/btn_item_background_state"
                android:clickable="true">

                <ImageView
                    android:id="@+id/ic_collect_image"
                    android:layout_width="62dp"
                    android:layout_height="65dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/main_menu_blue__part_of_button"
                    android:contentDescription="@string/collect_button"
                    android:src="@drawable/ic_collect" />

                <TextView
                    android:id="@+id/collectItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ic_collect_image"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:paddingLeft="5dp"
                    android:text="@string/collect_button"
                    android:textSize="20sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sendReceiveContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/btn_item_background_state"
                android:clickable="true">

                <ImageView
                    android:id="@+id/ic_send_reveive_image"
                    android:layout_width="62dp"
                	android:layout_height="65dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/main_menu_blue__part_of_button"
                    android:contentDescription="@string/collect_button"
                    android:src="@drawable/ic_send_receive" />

                <TextView
                    android:id="@+id/sendReceiveItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ic_send_reveive_image"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:paddingLeft="5dp"
                    android:text="@string/send_receive_button"
                    android:textSize="20sp" />

            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/selectContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/btn_item_background_state"
                android:clickable="true">

                <ImageView
                    android:id="@+id/ic_select_image"
                    android:layout_width="62dp"
                	android:layout_height="65dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/main_menu_blue__part_of_button"
                    android:contentDescription="@string/select_button"
                    android:src="@drawable/ic_select" />

                <TextView
                    android:id="@+id/selectItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ic_select_image"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:paddingLeft="5dp"
                    android:text="@string/select_button"
                    android:textSize="20sp" />

            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/navigateContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/btn_item_background_state"
                android:clickable="true">

                <ImageView
                    android:id="@+id/ic_navigate_image"
                    android:layout_width="62dp"
                	android:layout_height="65dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/main_menu_blue__part_of_button"
                    android:contentDescription="@string/navigate_button"
                    android:src="@drawable/ic_navigate" />

                <TextView
                    android:id="@+id/navigateItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ic_navigate_image"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:paddingLeft="5dp"
                    android:text="@string/navigate_button"
                    android:textSize="20sp" />

            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/sendFinalizedFormContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/btn_item_background_state"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/ic_send_finalized_form"
                    android:layout_width="62dp"
                	android:layout_height="65dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/main_menu_blue__part_of_button"
                    android:contentDescription="@string/send_data"
                    android:src="@drawable/ic_menu_send_finalized_form" />

                <TextView
                    android:id="@+id/sendFinalizedFormItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ic_send_finalized_form"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:paddingLeft="5dp"
                    android:text="@string/send_data"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/numberOfFormsToBeSent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_ballon"
                    android:gravity="center"
                    android:textColor="@color/text_white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </RelativeLayout>    
        </LinearLayout>
    </ScrollView>

</LinearLayout>