<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="8dip" />
         <stroke android:width="1dip" android:color="#97afdf" />
         <gradient android:angle="-90" android:startColor="#6b9ff6" android:endColor="#4285f4"  />            
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="8dip" />
         <stroke android:width="1dip" android:color="#1f3880" />
         <solid android:color="#4b579f"/>       
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="8dip" />
         <stroke android:width="1dip" android:color="#97afdf" />
         <gradient android:angle="-90" android:startColor="#4285f4" android:endColor="#6b9ff6" />            
     </shape>
 </item>
</selector>