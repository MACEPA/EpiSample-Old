<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#468799" />

            <stroke android:width="1dp" android:color="#4285f4" />

            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="0dp" android:topLeftRadius="4dp" android:topRightRadius="0dp" />
        </shape>
    </item>
    
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="#5e97f5" android:startColor="#74a6f7" />

            <stroke android:width="1dp" android:color="#4285f4" />

            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="0dp" android:topLeftRadius="4dp" android:topRightRadius="0dp" />
        </shape>    
    </item>

</selector>